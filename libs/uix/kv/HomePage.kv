# First Window

<ElementCard>:
    padding: 15
    spacing: 40
    radius: [50]
    ripple_behavior: True
    size_hint: 1, None
    height: '250dp'
    image: ''
    text: ''
    orientation:'vertical'
    pos_hint: {'center_x':.5}

    MDBoxLayout:
        orientation: 'vertical'
        padding: [0, 20, 0, 20]
        spacing: 10

        Image:
            source: root.image
            fit_mode: 'scale-down'
            size: dp(50), dp(50) 

        MDBoxLayout:
            padding: 10
            spacing: 15
            size_hint: 1, None
            orientation: 'horizontal'
            adaptive_height: True

            MDLabel:
                halign:"left"
                text: root.text
                size_hint_x: 1

            MDLabel:
                halign: 'right'
                size_hint_x: .1
                text: root.numberofContent

<HomePage>:
    name: "home"

    MDBoxLayout:
        md_bg_color: 'white'
        size_hint: 1, 1

        MDSliverAppbar:
            background_color: "white"
            hide_appbar: True
            radius: 0

            MDTopAppBar:
                type: "medium"

                MDTopAppBarLeadingButtonContainer:

                    MDActionTopAppBarButton:
                        icon: "account-edit-outline"
                        on_release:
                            root.goToUpdate()     

                MDTopAppBarTitle:
                    text: "Home"

                MDTopAppBarTrailingButtonContainer:

                    MDActionTopAppBarButton:
                        id: facebookw
                        icon: "facebook"
                        style: "standard"
                        theme_icon_color: 'Custom'
                        icon_color: '3b5998'
                        on_press:
                            root.goToFacebook()
                            
                    MDActionTopAppBarButton:
                        id: twitter
                        icon: "twitter"
                        style: "standard"
                        theme_icon_color: 'Custom'
                        icon_color: '1DA1F2'
                        on_press:
                            root.goToTwitter()

                    MDActionTopAppBarButton:
                        id: instagram
                        icon: "instagram"
                        style: "standard"        
                        theme_icon_color: 'Custom'
                        icon_color: 'e63946'
                        on_press:
                            root.goToInstagram()    

            MDSliverAppbarHeader:

                MDBoxLayout:
                    size_hint: 1, .7
                    padding: 20

                    MDBoxLayout:
                        orientation: 'vertical'
                        pos_hint: {"center_x": .5, "center_y": .5}
                        size_hint_y: 1
                        spacing: 10


                        MDBoxLayout:
                            id: image_background
                            style: "outlined"
                            pos_hint: {"center_x": .5, 'center_y': .5}
                            size_hint: 1, 1
                            radius: [20]  # Half of the height
                            padding: 5

                            FitImage:
                                id: profileImage  
                                source: ''

                        MDBoxLayout:
                            orientation: 'vertical'
                            adaptive_height: True
                            padding: [0, 10, 0, 10]
                            pos_hint: {"center_x": .5, 'center_y': .5}
                            MDBoxLayout:
                                orientation: 'horizontal'

                                MDLabel:
                                    id: name
                                    size_hint: 1, None
                                    height: self.texture_size[1]
                                    text_size: self.width, None
                                    halign: 'left'
                                    valign: 'top'
                                    font_style: 'Title'
                                    role: 'medium'

                                MDLabel:
                                    id: grade
                                    size_hint: 1, None
                                    halign: 'right'
                                    height: self.texture_size[1]
                                    valign: 'top'
                                    text_size: self.width, None
                                    halign: 'right'
                                    font_style: 'Title'
                                    role: 'medium'

                            MDBoxLayout:
                                orientation: 'horizontal'
                                adaptive_height: True
                                MDLabel:
                                    id: school
                                    size_hint: 1, None
                                    height: self.texture_size[1]
                                    text_size: self.width, None
                                    halign: 'left'
                                    valign: 'top'
                                    font_style: 'Title'
                                    role: 'medium'
                                
                                MDLabel:
                                    id: classname
                                    halign: 'right'
                                    valign: 'top'
                                    size_hint: 1, None
                                    height: self.texture_size[1]
                                    text_size: self.width, None
                                    font_style: 'Title'
                                    role: 'medium'

            MDSliverAppbarContent:
                id: content
                orientation: "vertical"
                padding: "12dp"
                radius: [100]
                theme_bg_color: "Custom"
                md_bg_color: "white"

                GridLayout:
                    cols: 2
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    size_hint: 1, None
                    spacing: 15
                    height: self.minimum_height

                    ElementCard:
                        id: achievements
                        image:"./assets/icons/achievements.png"
                        text: "Achievements"
                        numberofContent: ''
                        on_release:
                            root.viewDetails(achievements)

                    ElementCard:
                        id: community_service
                        image:"./assets/icons/community_service.png"
                        text: "Community Service"
                        numberofContent: ''
                        on_release:
                            root.viewDetails(community_service)

                    ElementCard:
                        id: clubs
                        image:"./assets/icons/clubs.png"
                        text: "Clubs"
                        numberofContent: ''
                        on_release:
                            root.viewDetails(clubs)

                    ElementCard:
                        id: sports
                        image:"./assets/icons/sports.png"
                        text: "Sports"
                        numberofContent: ''
                        on_release:
                            root.viewDetails(sports)

                    ElementCard:
                        id: classes
                        image:"./assets/icons/classes.png"
                        text: "Classes"
                        numberofContent: ''
                        on_release:
                            root.viewDetails(classes)

                    ElementCard:
                        id: arts
                        image:"./assets/icons/arts.png"
                        text: "Arts"
                        numberofContent: ''
                        on_release:
                            root.viewDetails(arts)
                            