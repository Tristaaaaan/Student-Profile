# First Window

<ElementCard>:
    padding: 15
    spacing: 20
    radius: [20]
    ripple_behavior: True
    size_hint: 1, None
    height: '250dp'
    image: ''
    text: ''
    orientation:'vertical'
    pos_hint: {'center_x':.5}

    MDBoxLayout:
        orientation: 'vertical'
        padding: [0, 20, 0, 20]
        spacing: 10
        Image:
            source: root.image
            fit_mode: 'scale-down'
            size: dp(50), dp(50) 

        MDBoxLayout:
            padding: 10
            spacing: 15
            size_hint: 1, None
            orientation: 'horizontal'
            adaptive_height: True

            MDLabel:
                halign:"left"
                text: root.text
                size_hint_x: 1

            MDLabel:
                halign: 'right'
                size_hint_x: .1
                text: root.numberofContent

<HomePage>:
    name: "home"

    MDBoxLayout:
        md_bg_color: 'white'
        size_hint: 1, 1
        orientation: 'vertical'

        MDBoxLayout:
            pos_hint: {'center_x': .5, 'center_y': .5}
            orientation: 'vertical'
            spacing: 15
            padding: [0, 30, 0, 0]
            size_hint: .9, None
            adaptive_height: True

            MDCard:
                id: image_background
                md_bg_color: 'white'
                style: "outlined"
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint: 1, None
                
                height: '225dp'
                style: "outlined"
                padding: 5
                on_release:
                    root.goToUpdate()
                
                Image:
                    id: profileImage  
                    source: ''
                    fit_mode: 'scale-down' 

        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: .9, None
            padding: [0, 10, 0, 10]
            adaptive_height: True

            MDBoxLayout:
                orientation: 'horizontal'
                adaptive_height: True     
                size_hint: 1, None      
                padding: [0, 5, 0, 5]
                MDLabel:
                    id: name
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    halign: 'left'
                    valign: 'center'
                    font_style: 'Title'
                    role: 'large'

                MDLabel:
                    id: grade
                    size_hint_y: None
                    halign: 'right'
                    height: self.texture_size[1]
                    valign: 'center'
                    text_size: self.width, None
                    halign: 'right'
                    font_style: 'Title'
                    role: 'large'

            MDBoxLayout:
                orientation: 'horizontal'
                adaptive_height: True     
                size_hint: 1, None     
                padding: [0, 5, 0, 5]
                MDLabel:
                    id: school
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    halign: 'left'
                    valign: 'center'
                    font_style: 'Title'
                    role: 'large'

                MDLabel:
                    id: classname
                    halign: 'right'
                    valign: 'center'
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    font_style: 'Title'
                    role: 'large'

        ScrollView:
            do_scroll_y: True
            do_scroll_x: False
            size_hint: .9, 1
            pos_hint: {'center_x': .5, 'center_y': .5}

            MDBoxLayout:
                pos_hint: {'center_x': .5, 'center_y': .5}
                height: self.minimum_height
                size_hint: 1, None
                GridLayout:
                    cols: 2
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    size_hint: 1, None
                    spacing: 15
                    height: self.minimum_height
                    md_bg_color: 'grey'

                    ElementCard:
                        id: achievements
                        image:"./assets/icons/achievements.png"
                        text: "Achievements"
                        numberofContent: ''
                        on_release:
                            root.viewDetails(achievements)

                    ElementCard:
                        id: community_service
                        image:"./assets/icons/community_service.png"
                        text: "Community Service"
                        numberofContent: ''
                        on_release:
                            root.viewDetails(community_service)

                    ElementCard:
                        id: clubs
                        image:"./assets/icons/clubs.png"
                        text: "Clubs"
                        numberofContent: ''
                        on_release:
                            root.viewDetails(clubs)

                    ElementCard:
                        id: sports
                        image:"./assets/icons/sports.png"
                        text: "Sports"
                        numberofContent: ''
                        on_release:
                            root.viewDetails(sports)

                    ElementCard:
                        id: classes
                        image:"./assets/icons/classes.png"
                        text: "Classes"
                        numberofContent: ''
                        on_release:
                            root.viewDetails(classes)

                    ElementCard:
                        id: arts
                        image:"./assets/icons/arts.png"
                        text: "Arts"
                        numberofContent: ''
                        on_release:
                            root.viewDetails(arts)

