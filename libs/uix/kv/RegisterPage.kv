# RegisterPage
<RegisterPage>:
    name: "register"

    MDBoxLayout:
        size_hint: 1, 1
        pos_hint: {'center_x': .5, 'center_y': .5}
        md_bg_color: 'white'
        
        MDAnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            pos_hint: {'center_x': .5, 'center_y': .5}

            MDBoxLayout:
                size_hint: 1, None
                adaptive_height: True
                pos_hint: {'center_x': .5, 'center_y': .5}
                orientation: 'vertical'
                spacing: 25

                MDBoxLayout:
                    id: imageholder
                    pos_hint: {"center_x": .5, "center_y": .5}
                    size_hint: .8, None
                    adaptive_height: True
                    
                    MDButton:
                        style: "tonal"
                        theme_width: "Custom"
                        height: "200dp"
                        size_hint_x: 1

                        MDButtonIcon:
                            x: text.x - (self.width + dp(10))
                            icon: "image-plus-outline"

                        MDButtonText:
                            id: text
                            text: "Upload your image"
                            pos_hint: {"center_x": .5, "center_y": .5}
                            
                MDTextField:
                    id: name
                    mode: "outlined"
                    size_hint_x: .8
                    pos_hint: {"center_x": .5, "center_y": .5}


                    MDTextFieldHintText:
                        text: "Name"

                    MDTextFieldMaxLengthText:
                        max_text_length: 55

                MDTextField:
                    id: grade
                    mode: "outlined"
                    size_hint_x: .8
                    pos_hint: {"center_x": .5, "center_y": .5}


                    MDTextFieldHintText:
                        text: "Grade"

                    MDTextFieldMaxLengthText:
                        max_text_length: 55

                MDTextField:
                    id: classname
                    mode: "outlined"
                    size_hint_x: .8
                    pos_hint: {"center_x": .5, "center_y": .5}


                    MDTextFieldHintText:
                        text: "Class"        

                    MDTextFieldMaxLengthText:
                        max_text_length: 55

                MDTextField:
                    id: school
                    mode: "outlined"
                    size_hint_x: .8
                    pos_hint: {"center_x": .5, "center_y": .5}


                    MDTextFieldMaxLengthText:
                        max_text_length: 55

                    MDTextFieldHintText:
                        text: "School"                 
                MDBoxLayout:
                    size_hint: .8, None
                    adaptive_height: True
                    spacing: 10
                    orientation: 'horizontal'
                    pos_hint: {"center_x": .5, "center_y": .5}

                    MDIconButton:
                        pos_hint: {"center_x": .5, "center_y": .5}
                        icon: 'refresh'
                        on_release:
                            root.refresh()

                    MDButton:
                        style: "tonal"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        theme_width: "Custom"
                        height: "56dp"
                        size_hint_x: .8
                        on_release:
                            root.validateInfo()

                        MDButtonText:
                            text: "Submit"
                            pos_hint: {"center_x": .5, "center_y": .5}





